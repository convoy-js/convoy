{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2018",
    "module": "commonjs",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@convoy/command": ["packages/command/src/index.ts"],
      "@convoy/command/deepkit": ["packages/command/deepkit/src/index.ts"],
      "@convoy/command/nest": ["packages/command/nest/src/index.ts"],
      "@convoy/common": ["packages/common/src/index.ts"],
      "@convoy/core": ["packages/core/src/index.ts"],
      "@convoy/core/deepkit": ["packages/core/deepkit/src/index.ts"],
      "@convoy/core/nest": ["packages/core/nest/src/index.ts"],
      "@convoy/database": ["packages/database/src/index.ts"],
      "@convoy/database/deepkit": ["packages/database/deepkit/src/index.ts"],
      "@convoy/database/nest": ["packages/database/nest/src/index.ts"],
      "@convoy/domain": ["packages/domain/src/index.ts"],
      "@convoy/event": ["packages/event/src/index.ts"],
      "@convoy/event/deepkit": ["packages/event/deepkit/src/index.ts"],
      "@convoy/event/nest": ["packages/event/nest/src/index.ts"],
      "@convoy/kafka": ["packages/kafka/src/index.ts"],
      "@convoy/kafka/deepkit": ["packages/kafka/deepkit/src/index.ts"],
      "@convoy/kafka/nest": ["packages/kafka/nest/src/index.ts"],
      "@convoy/message": ["packages/message/src/index.ts"],
      "@convoy/message/deepkit": ["packages/message/deepkit/src/index.ts"],
      "@convoy/message/nest": ["packages/message/nest/src/index.ts"],
      "@convoy/saga": ["packages/saga/src/index.ts"],
      "@convoy/saga/deepkit": ["packages/saga/deepkit/src/index.ts"],
      "@convoy/saga/nest": ["packages/saga/nest/src/index.ts"],
      "@convoy/saga/testing": ["packages/saga/testing/src/index.ts"],
      "@convoy/web": ["packages/web/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "reflection": true
}
